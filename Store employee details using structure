#include <stdio.h>

struct emp {
    int id;
    char name[20];
    float salary;
};

int main() {
    struct emp e;

    printf("Enter id, name, salary: ");
    scanf("%d %s %f", &e.id, e.name, &e.salary);

    printf("ID:%d Name:%s Salary:%.2f\n",
           e.id, e.name, e.salary);
    return 0;
}
